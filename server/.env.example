# Deployment Provider (choose one)
# Option 1: Fly.io (recommended)
FLYIO_API_TOKEN=your_flyio_api_token_here

# Option 2: Freestyle.sh (fallback - currently experiencing issues)
# FREESTYLE_API_KEY=your_freestyle_api_key_here

# Supabase (for auth & database)
SUPABASE_URL=your_supabase_url
SUPABASE_SERVICE_KEY=your_supabase_service_key

# OpenAI (for Mastra AI agent)
OPENAI_API_KEY=your_openai_api_key_here

# Server
PORT=3001
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Allowed Frame Origins (for widget iframe embedding)
# Space-separated list of origins allowed to embed widgets in iframes
# Development: http://localhost:5173 http://localhost:5174
# Production: https://yourdomain.com
ALLOWED_FRAME_ORIGINS=http://localhost:5173 http://localhost:5174
